CC="clang"
CXX="clang++"
AR="llvm-ar"
NM="llvm-nm"
AS="llvm-as"
STRIP="llvm-strip"
LIPO="llvm-lipo"
READELF="llvm-readelf"
OBJDUMP="llvm-objdump"
OBJCOPY="llvm-objcopy"
RANLIB="llvm-ranlib"
LD="ld.lld"

COMMON_FLAGS="-O2 -pipe @C_OPT_FLAGS@"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS} -stdlib=libc++"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"
RUSTFLAGS="@RUST_OPT_FLAGS@"

LDFLAGS="-fuse-ld=lld -rtlib=compiler-rt -unwindlib=libunwind -Wl,--as-needed"
