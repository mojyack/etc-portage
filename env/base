LD="ld.$LINKER"

COMMON_FLAGS="-O2 -pipe $COPTFLAGS"
CFLAGS="$COMMON_FLAGS"
CXXFLAGS="$COMMON_FLAGS"
FCFLAGS="$COMMON_FLAGS"
FFLAGS="$COMMON_FLAGS"
RUSTFLAGS="-C opt-level=3 -C link-arg=-fuse-ld=$LINKER $RUSTOPTFLAGS"

LDFLAGS="-fuse-ld=$LINKER -Wl,--as-needed -Wl,--undefined-version -Wl,--threads=80"
